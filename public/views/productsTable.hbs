<h2 class="titleList">Nuestra Lista de bebidas</h2>
<div>
    {{#if products.length}}
    <table>
        <tr class="contTitle">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Foto</th>
        </tr>
        {{#each products}}
        <tr class="contTitle">
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td>Stock: {{this.stock}}</td>
            <td><img src={{this.img}} alt="image"></td>
        </tr>
        {{/each}}
    </table>
    {{else}}
    <div>
        <h2>NO HAY PRODUCTOS DISPONIBLES</h2>
    </div>
    {{/if}}
</div>